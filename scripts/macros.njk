{% macro show_example(good_or_bad) %}

<div class="container ml-3">
<div class="row">
<div class="col-sm-auto">
{% if good_or_bad=='good' %}{{ good }}{% else %}{{ bad }}&nbsp;&nbsp;{% endif %}
</div>
<div class="col">

{{ caller() }}
</div>
</div>
</div>
{% endmacro %}


{% macro thumbnail(icon) %}<thumbnail circle text="{{ icon }}" background="#e67300" font-color="white" size="50" />{% endmacro %}


{% macro step(n, label='Step') %}<span class="badge bg-dark bigger-level0">{{ label }} {{ n }}</span>{% endmacro %}


{% macro embed(header, src, indent=2) %}
<div class="indented-level{{ indent }}">

<panel header="{{ icon_embedding | safe }} {{ header }}" minimized>

<include src="{{ src }}" />
</panel>
</div>
<p/>
{% endmacro %}


{% macro show_as_button(text) %}<span class="border border-secondary pr-1 pl-1 mr-1 ml-1 rounded">&nbsp;{{ text }}&nbsp;</span>{% endmacro %}

{% macro show_as_tab(text, icon) %}<span class="border">&nbsp;{{ icon }} {{ text }}&nbsp;</span>{% endmacro %}

{% macro show_as_rounded_tab(text) %}<span class="border border-secondary border-bottom-0 pr-1 pl-1 mr-1 ml-1 rounded-top"><small>{{ text }}</small></span>{% endmacro %}
