{
  "baseUrl": "/guides",
  "titlePrefix": "",
  "timeZone": "Asia/Singapore",
  "style": {
    "codeTheme": "light"
  },
  "ignore": [
    "_markbind/layouts/*",
    "_markbind/logs/*",
    "_site/*",
    "site.json",
    "*.md",
    "*.njk",
    ".git/*"
  ],
  "pages": [
    {
      "glob": ["**/*.md"]
    }
  ],
  "pagesExclude": ["**/*-fragment.md"],
  "deploy": {
    "message": "Site Update."
  },
  "plugins": ["filterTags"],
  "pluginsContext": {
    "filterTags" : {
      "tags": []
    }
  }
}
